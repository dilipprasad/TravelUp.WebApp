@model PaginatedResponse<TravelUp.WebApp.Models.Employee>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var employee in Model.Items)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Name</td>
                    <td>@employee.Email</td>
                    <td>@employee.Address</td>
                   
                    <td>
                        <a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id">Edit</a> |
                        <a asp-controller="Employee" asp-action="DeleteConfirmation" asp-route-id="@employee.Id">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
